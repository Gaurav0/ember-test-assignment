<div class="d-flex h-100">
  <div class="m-auto">
    <form>
      <div class="form-group">
        <label for="exampleInputEmail1">Email</label>
        <Input @value={{email}} @type="email" class="form-control" @id="exampleInputEmail1" @aria-describedby="emailHelp" placeholder="Enter email" />
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <Input @value={{password}} @type="password" class="form-control" @id="exampleInputPassword1" placeholder="Password" />
      </div>
      <button type="submit" class="btn btn-primary" {{action 'login' email password}}>Login</button>
      or <LinkTo @route="signup">Sign up</LinkTo>
      {{#if errorMessage}}
        {{errorMessage}}
      {{/if}}
    </form>
  </div>
</div>
